<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddList"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/AddList_imageView_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/cat"
            />
        <Button
            android:id="@+id/AddList_button_upload"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="갤러리에서 사진 가져오기"/>

    </LinearLayout>


    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="카테고리"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingRight="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <CheckBox
                android:id="@+id/AddList_checkBox_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="예금"/>
            <CheckBox
                android:id="@+id/AddList_checkBox_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="독서"/>
            <CheckBox
                android:id="@+id/AddList_checkBox_travel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="여행"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="진행상황"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingRight="20dp"/>
        <SeekBar
            android:id="@+id/AddList_SeekBar_progress"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.ActionBar.Solid"
            android:max="100"
            android:progress="0"
            />
        <TextView
            android:id="@+id/AddList_textView_progress"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="D-Day"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingRight="20dp"/>
        <RadioGroup
            android:id="@+id/AddList_radioGroup_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/AddList_radioButton_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="있음"/>
            <RadioButton
                android:id="@+id/AddList_radioButton_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="없음"/>
        </RadioGroup>
        <TextView
            android:id="@+id/AddList_textView_date"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="invisible"/>
    </LinearLayout>

    <EditText
        android:id="@+id/AddList_editText_list"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="버킷 리스트"/>

    <EditText
        android:id="@+id/AddList_editText_description"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="내용"
        />

    <Button
        android:id="@+id/AddList_button_save"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="저장하기"
        android:textSize="14dp"
        />



</LinearLayout>